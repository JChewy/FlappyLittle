<div id="login_box">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.text_field :login, class: "login_field", placeholder: "Username or Email" %>
   
      <%= f.password_field :password, class: "login_field", placeholder: "Password", autocomplete: "off" %>

      <%= f.submit "Log in", class: "login_button" %>
    </div>

  <% end %>

  <div class="sclick">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>

      <%= link_to "Sign up", new_registration_path(resource_name), class: "sbutton" %><br />

    <% end -%>
  </div>

  <div class="sclick">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>

      <%= link_to "Forgot your password?", forgot_password_path(resource_name), class: "sbutton" %><br />
      
    <% end -%>
  </div>

  <%= render :partial => "shared/within_login" %>

</div>